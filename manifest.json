{
  "name": "GambitProfit Extension",
  "version": "0.1",
  "description": "Browser extension for GambitProfit. View bet amounts, automate team challenges, and more with just a few clicks.",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/gambit-16x16.png",
      "32": "images/gambit-32x32.png",
      "48": "images/gambit-48x48.png",
      "128": "images/gambit-128x128.png"
    }
  },
  "icons": {
    "16": "images/gambit-16x16.png",
    "32": "images/gambit-32x32.png",
    "48": "images/gambit-48x48.png",
    "128": "images/gambit-128x128.png"
  },
  "permissions": ["storage", "declarativeContent", "activeTab", "https://api.gambitprofit.com/*"],
  "manifest_version": 2,
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
}